#!/usr/bin/env bash

# Vérifie que le script est exécuté avec sudo
if [ "$EUID" -ne 0 ]; then
  echo "Please run as root"
  exit 1
fi

# Sauvegarde du fichier hosts actuel
cp /etc/hosts /etc/hosts.bak

# Supprime les anciennes entrées localhost et facebook.com si elles existent
sed -i '/localhost/d' /etc/hosts
sed -i '/facebook.com/d' /etc/hosts

# Ajoute les nouvelles résolutions
echo "127.0.0.2 localhost" >> /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts

echo "Hosts updated successfully!"
